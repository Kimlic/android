<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_selected="true">
    <layer-list>
      <item android:height="@dimen/stage_button_height" android:width="@dimen/stage_button_width">
        <shape android:shape="rectangle">
          <solid android:color="@android:color/transparent"/>
        </shape>
      </item>
      <item android:bottom="3dp">
        <shape android:shape="rectangle">
          <solid android:color="@android:color/transparent"/>
        </shape>
      </item>
      <item android:drawable="@drawable/ic_accounts_button_blue" android:gravity="center"/>
    </layer-list>
  </item>

  <item android:state_selected="false">
    <layer-list>
      <item android:height="@dimen/stage_button_height" android:width="@dimen/stage_button_width">
        <shape android:shape="rectangle">
          <solid android:color="@android:color/transparent"/>
        </shape>
      </item>
      <item android:bottom="3dp">
        <shape android:shape="rectangle">
          <solid android:color="@android:color/transparent"/>
        </shape>
      </item>
      <item android:drawable="@drawable/ic_accounts_button_gray" android:gravity="center"/>
    </layer-list>
  </item>
</selector>
