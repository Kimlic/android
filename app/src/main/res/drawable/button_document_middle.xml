<selector xmlns:android="http://schemas.android.com/apk/res/android"
  android:enterFadeDuration="75"
  android:exitFadeDuration="75">
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <gradient
        android:angle="270"
        android:endColor="#525252"
        android:startColor="#646464"/>
    </shape>
  </item>
  <item android:state_pressed="false">
    <shape android:shape="rectangle">
      <gradient
        android:angle="270"
        android:endColor="#646464"
        android:startColor="#646464"/>
    </shape>
  </item>
</selector>

