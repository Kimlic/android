<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#2daaff">

  <ImageView
    android:id="@+id/mailIv"
    android:layout_width="116dp"
    android:layout_height="116dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/ic_white_email_success_icon"
    android:contentDescription="@string/email"
    android:elevation="@dimen/image_elevation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <LinearLayout
    android:id="@+id/llRootMiddle"
    android:layout_width="@dimen/content_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="36dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@id/saveBt"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/mailIv">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="16dp"
      android:gravity="center"
      android:text="@string/verify_your_email"
      android:textColor="@android:color/white"
      android:textSize="@dimen/title_text_size"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="16dp"
      android:gravity="center"
      android:text="@string/code_sent_to_mdsanders_kimlic_com"
      android:textColor="@color/grayLight"
      android:textSize="@dimen/subtitle_text_size"/>

    <LinearLayout
      android:id="@+id/holdersLl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:focusable="auto"
      android:gravity="center"
      android:orientation="horizontal"
      tools:ignore="LabelFor">

      <EditText
        android:id="@+id/digit1Et"
        style="@style/DigitHolderStyle"
        android:tag="@string/_0"
        android:text=""/>

      <EditText
        android:id="@+id/digit2Et"
        style="@style/DigitHolderStyle"
        android:tag="@string/_1"
        android:text=""/>

      <EditText
        android:id="@+id/digit3Et"
        style="@style/DigitHolderStyle"
        android:tag="@string/_2"
        android:text=""/>

      <EditText
        android:id="@+id/digit4Et"
        style="@style/DigitHolderStyle"
        android:tag="@string/_3"
        android:text=""/>

    </LinearLayout>

  </LinearLayout>

  <TextView
    android:id="@+id/changeTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:gravity="center"
    android:text="@string/change_email_address"
    android:textColor="@android:color/white"
    android:textSize="@dimen/subtitle_text_size"
    app:layout_constraintBottom_toTopOf="@+id/verifyBt"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <Button
    android:id="@+id/verifyBt"
    android:layout_width="@dimen/content_width"
    android:layout_height="48dp"
    android:layout_marginBottom="16dp"
    android:paddingStart="80dp"
    android:paddingEnd="80dp"
    android:background="@drawable/button_rounded_green"
    android:drawableStart="@drawable/ic_verify_lock_icon"
    android:text="@string/verify_email"
    android:textAllCaps="false"
    android:textColor="@android:color/white"
    android:textSize="@dimen/button_text_size"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>