<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.kimlic.passcode.PasscodeActivity">

  <LinearLayout
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:baselineAligned="true"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextSwitcher
      android:id="@+id/tsPasscodeTitle"
      android:layout_width="310dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_gravity="center_horizontal"/>

    <TextSwitcher
      android:id="@+id/tsPasscodeSubtitle"
      android:layout_width="310dp"
      android:layout_height="50dp"
      android:layout_marginBottom="8dp"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_gravity="center"
      android:padding="16dp">

      <Button
        android:id="@+id/btPasscodeDot1"
        style="?android:attr/buttonBarStyle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="8dp"
        android:background="@drawable/button_dots_shape_oval"
        android:clickable="false"
        android:tag="1"
        android:visibility="visible"
        android:visible="false"/>

      <Button
        android:id="@+id/btPasscodeDot2"
        style="?android:attr/buttonBarStyle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="8dp"
        android:background="@drawable/button_dots_shape_oval"
        android:clickable="false"
        android:tag="2"
        android:visibility="visible"/>

      <Button
        android:id="@+id/btPasscodeDot3"
        style="?android:attr/buttonBarStyle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="8dp"
        android:background="@drawable/button_dots_shape_oval"
        android:clickable="true"
        android:focusable="true"
        android:tag="3"
        android:visibility="visible"/>

      <Button
        android:id="@+id/btPasscodeDot4"
        style="?android:attr/buttonBarStyle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="8dp"
        android:background="@drawable/button_dots_shape_oval"
        android:clickable="false"
        android:tag="4"
        android:visibility="visible"/>
    </LinearLayout>

    <GridLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:columnCount="3"
      android:rowCount="4"
      android:useDefaultMargins="true">

      <Button
        android:id="@+id/btPasscode1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="0"
        android:layout_row="0"
        android:background="@drawable/button_shape_circle"
        android:text="@string/_1"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

      <Button
        android:id="@+id/btPasscode2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@drawable/button_shape_circle"
        android:text="@string/_2"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

      <Button
        android:id="@+id/btPasscode3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="2"
        android:layout_row="0"
        android:background="@drawable/button_shape_circle"
        android:text="@string/_3"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

      <Button
        android:id="@+id/btPasscode4"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@drawable/button_shape_circle"
        android:text="@string/_4"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>
      <Button
        android:id="@+id/btPasscode5"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@drawable/button_shape_circle"
        android:text="@string/_5"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

      <Button
        android:id="@+id/btPasscode6"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="2"
        android:layout_row="1"
        android:background="@drawable/button_shape_circle"
        android:text="@string/_6"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

      <Button
        android:id="@+id/btPasscode7"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="0"
        android:layout_row="2"
        android:background="@drawable/button_shape_circle"
        android:text="@string/_7"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

      <Button
        android:id="@+id/btPasscode8"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="1"
        android:layout_row="2"
        android:background="@drawable/button_shape_circle"
        android:text="@string/_8"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

      <Button
        android:id="@+id/btPasscode9"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="2"
        android:layout_row="2"
        android:background="@drawable/button_shape_circle"
        android:text="@string/_9"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>
      <Button
        android:id="@+id/btPasscodeDelete"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="0"
        android:layout_row="3"
        android:background="@drawable/button_shape_circle"
        android:text="*"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

      <Button
        android:id="@+id/btPasscode0"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="1"
        android:layout_row="3"
        android:background="@drawable/button_shape_circle"
        android:text="@string/_0"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

      <Button
        android:id="@+id/btPasscodeOk"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_column="2"
        android:layout_row="3"
        android:background="@drawable/button_shape_circle"
        android:enabled="false"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>
    </GridLayout>
  </LinearLayout>
</android.support.constraint.ConstraintLayout>