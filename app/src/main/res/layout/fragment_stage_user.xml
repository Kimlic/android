<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgLight">

    <Button
        android:id="@+id/settingsBt"
        android:layout_width="@dimen/menu_element_square_size"
        android:layout_height="@dimen/menu_element_square_size"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_settings_36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userPhotoIv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/user_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/rootMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPhotoIv">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/lightBlue"
            android:textSize="@dimen/subtitle_text_size"
            tools:text="Add your name" />

        <TextView
            android:id="@+id/subtitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_verified_user_dark_24dp"
            android:textColor="@color/lightBlue"
            android:textSize="@dimen/subtitle_text_size"
            tools:text="You have 2 security risks" />

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rootMiddle">

        <LinearLayout
            android:layout_width="@dimen/content_width"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ContentDescription">

            <RelativeLayout
                android:id="@+id/nameItem"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:focusableInTouchMode="false">

                <TextView
                    android:id="@+id/nameTv"
                    style="@style/DetailsItemTextView"
                    android:drawableStart="@drawable/ic_perm_identity_dark_24dp"
                    tools:text="Your full name" />

                <ImageView style="@style/DetailsItemShevron" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/content_width"
                android:layout_height="1dp"
                android:background="@color/lightBlue" />

            <RelativeLayout
                android:id="@+id/phoneItem"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:focusableInTouchMode="false">

                <TextView
                    android:id="@+id/phoneTv"
                    style="@style/DetailsItemTextView"
                    android:drawableStart="@drawable/ic_phone_in_talk_dark_24dp"
                    android:gravity="center"
                    tools:text="+372 504953839" />

                <ImageView style="@style/DetailsItemShevron" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/content_width"
                android:layout_height="1dp"
                android:background="@color/lightBlue" />

            <RelativeLayout
                android:id="@+id/emailItem"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:focusableInTouchMode="false">

                <TextView
                    android:id="@+id/emailTv"
                    style="@style/DetailsItemTextView"
                    android:drawableStart="@drawable/ic_perm_identity_dark_24dp"
                    tools:text="Add your email" />

                <ImageView style="@style/DetailsItemShevron" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/content_width"
                android:layout_height="1dp"
                android:background="@color/lightBlue" />

            <RelativeLayout
                android:id="@+id/verifyItem"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:focusableInTouchMode="false">

                <TextView
                    android:id="@+id/verifyTv"
                    style="@style/DetailsItemTextView"
                    android:drawableStart="@drawable/ic_assignment_ind_dark_24dp"
                    tools:text="Verify your ID" />

                <ImageView style="@style/DetailsItemShevron" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/content_width"
                android:layout_height="1dp"
                android:background="@color/lightBlue" />

            <RelativeLayout
                android:id="@+id/addressItem"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:focusableInTouchMode="false">

                <TextView
                    android:id="@+id/addressTv"
                    style="@style/DetailsItemTextView"
                    android:drawableStart="@drawable/map_marker_outline"
                    tools:text="Address" />

                <ImageView style="@style/DetailsItemShevron" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/content_width"
                android:layout_height="1dp"
                android:background="@color/lightBlue" />

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>