<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/profile_background">

  <Button
    android:id="@+id/settingsBt"
    android:layout_width="@dimen/menu_element_square_size"
    android:layout_height="@dimen/menu_element_square_size"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/ic_profile_settings_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <FrameLayout
    android:id="@+id/userPhotoFl"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:id="@+id/userPhotoLl"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"/>

    <!--<com.kimlic.stage.UserPhotoView-->
    <!--android:id="@+id/userPhotoIv"-->
    <!--android:layout_width="260dp"-->
    <!--android:layout_height="180dp"-->
    <!--android:layout_gravity="center"-->
    <!--android:padding="10dp"-->
    <!--android:contentDescription="@string/user_photo"/>-->

    <LinearLayout
      android:id="@+id/takePhotoLl"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:foregroundGravity="top"
      android:orientation="vertical"
      tools:ignore="UseCompoundDrawables">

      <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_profile_photo_icon"
        android:contentDescription="@string/photo_camera_image"
        android:focusableInTouchMode="false"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_your_photo"
        android:textColor="@android:color/white"/>

    </LinearLayout>

  </FrameLayout>

  <RelativeLayout
    android:id="@+id/nameItem"
    android:layout_width="@dimen/content_width"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    android:focusableInTouchMode="false"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/userPhotoFl">

    <TextView
      android:id="@+id/nameTv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:textColor="@color/lightBlue"
      android:textSize="@dimen/title_text_size"
      tools:text="Your full name"/>

    <ImageView
      android:id="@+id/nameArrow"
      style="@style/DetailsItemShevron"
      android:contentDescription="@string/arrow"/>

  </RelativeLayout>

  <TextView
    android:id="@+id/risksTv"
    android:layout_width="@dimen/content_width"
    android:layout_height="24dp"
    android:layout_gravity="start"
    android:drawablePadding="8dp"
    android:drawableStart="@drawable/ic_profile_warning_red_white_icon"
    android:text="@string/you_have_security_risks"
    android:textColor="@android:color/white"
    android:textSize="@dimen/subtitle_text_size"
    android:visibility="gone"
    app:layout_constraintStart_toStartOf="@id/nameItem"
    app:layout_constraintTop_toBottomOf="@id/nameItem"/>

  <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/risksTv">

    <LinearLayout
      android:layout_width="@dimen/content_width"
      android:layout_height="wrap_content"
      android:paddingBottom="80dp"
      android:orientation="vertical"
      tools:ignore="ContentDescription">

      <RelativeLayout
        android:id="@+id/kimItem"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusableInTouchMode="false">

        <ImageView
          android:id="@+id/kimIv"
          style="@style/DetailsItemTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/ic_phone_in_talk_dark_24dp"/>

        <TextView
          android:id="@+id/kimTv"
          style="@style/DetailsItemTextView"
          android:layout_marginStart="32dp"
          android:gravity="center"
          tools:text="Balance 2 KIM"/>

        <ImageView
          android:id="@+id/kimArrow"
          style="@style/DetailsItemShevron"/>

      </RelativeLayout>


      <View
        android:layout_width="@dimen/content_width"
        android:layout_height="1dp"
        android:background="@color/lightBlue"/>

      <android.support.v7.widget.RecyclerView
        android:id="@+id/contactsRecycler"
        android:layout_width="@dimen/content_width"
        android:layout_height="wrap_content"
        android:overScrollMode="always"/>

      <!--<View-->
      <!--android:layout_width="@dimen/content_width"-->
      <!--android:layout_height="1dp"-->
      <!--android:background="@color/lightBlue"/>-->

      <!--Address-->

      <RelativeLayout
        android:id="@+id/addressItem"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusableInTouchMode="false">

        <ImageView
          android:id="@+id/addressIv"
          style="@style/DetailsItemTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/map_marker_outline"/>

        <TextView
          android:id="@+id/addressTv"
          style="@style/DetailsItemTextView"
          android:layout_marginStart="32dp"
          tools:text="Address"/>

        <ImageView
          android:id="@+id/addressArrow"
          style="@style/DetailsItemShevron"/>

      </RelativeLayout>

      <View
        android:layout_width="@dimen/content_width"
        android:layout_height="1dp"
        android:background="@color/lightBlue"/>

      <android.support.v7.widget.RecyclerView
        android:id="@+id/documentRecycler"
        android:layout_width="@dimen/content_width"
        android:layout_height="wrap_content"
        android:overScrollMode="always"/>

      <!--<RelativeLayout-->
      <!--android:id="@+id/idItem"-->
      <!--android:layout_width="match_parent"-->
      <!--android:layout_height="48dp"-->
      <!--android:focusableInTouchMode="false">-->

      <!--<ImageView-->
      <!--android:id="@+id/idIv"-->
      <!--style="@style/DetailsItemTextView"-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:background="@drawable/ic_assignment_ind_dark_24dp"/>-->

      <!--<TextView-->
      <!--android:id="@+id/idTv"-->
      <!--style="@style/DetailsItemTextView"-->
      <!--android:layout_marginStart="32dp"-->
      <!--android:text="@string/verify_your_id"/>-->

      <!--<ImageView-->
      <!--android:id="@+id/idArrow"-->
      <!--style="@style/DetailsItemShevron"/>-->

      <!--</RelativeLayout>-->

    </LinearLayout>

  </ScrollView>

</android.support.constraint.ConstraintLayout>