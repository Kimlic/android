<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background_fingerprint_texture">

  <FrameLayout
    android:id="@+id/rpFl"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:layout_width="172dp"
      android:layout_height="164dp"
      android:layout_gravity="center"
      android:background="@drawable/ic_account_detail_white_hexagon"
      android:contentDescription="@string/hexagon_background"/>

    <ImageView
      android:id="@+id/rpLogoIv"
      android:layout_width="88dp"
      android:layout_height="88dp"
      android:layout_gravity="center"
      android:contentDescription="@string/photo_camera_image"
      android:focusableInTouchMode="false"
      android:layerType="hardware"
      android:scaleType="fitCenter"/>

  </FrameLayout>

  <!-- android:layout_width="@dimen/menu_element_square_size"
    android:layout_height="@dimen/menu_element_square_size"-->

  <Button
    android:id="@+id/backBt"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_marginTop="24dp"
    android:layout_marginStart="24dp"
    android:background="@drawable/ic_chevron_left_white_32dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <LinearLayout
    android:id="@+id/rootLl"
    android:layout_width="@dimen/content_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rpFl">

    <TextView
      android:id="@+id/titleTv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/kimlic_rp"
      android:textColor="@android:color/white"
      android:textSize="@dimen/text_size_large_26"
      tools:text="Kimlic RP"/>

    <TextView
      android:id="@+id/subtitle1Tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@string/identity_verification_by_veriff"
      android:textColor="@android:color/white"
      android:textSize="@dimen/text_size_medium_18"
      />

    <TextView
      android:id="@+id/subtitle2Tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@string/your_following_details_to_be_shared"
      android:textColor="@android:color/white"
      android:textSize="@dimen/text_size_medium_18"
      />
  </LinearLayout>

  <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="310dp"
    android:layout_height="192dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none"
    app:layout_constraintBottom_toTopOf="@id/viewExplorerBt"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/rootLl">

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <android.support.v7.widget.RecyclerView
        android:id="@+id/accountDetailsRecycler"
        android:layout_width="@dimen/content_width"
        android:layout_height="192dp"
        android:layout_alignParentTop="true"
        android:overScrollMode="never"/>
    </RelativeLayout>

  </ScrollView>

  <Button
    android:id="@+id/viewExplorerBt"
    android:layout_width="@dimen/content_width"
    android:layout_height="@dimen/button_height"
    android:layout_marginBottom="16dp"
    android:background="@drawable/button_rounded_blue"
    android:text="@string/view_kimlic_explorer"
    android:textAllCaps="false"
    android:textColor="@android:color/white"
    android:textSize="@dimen/button_text_size"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

