<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/phoneItem"
  android:layout_width="match_parent"
  android:layout_height="48dp"
  android:focusableInTouchMode="false">

  <ImageView
    android:id="@+id/documentIv"
    style="@style/DetailsItemTextView"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:contentDescription="@string/document"
    tools:background="@drawable/ic_profile_name_icon_white"/>

  <TextView
    android:id="@+id/documentTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:textColor="@color/lightBlue"
    android:textSize="16sp"
    tools:ignore="RelativeOverlap"
    tools:text="Country"/>

  <ImageView
    android:id="@+id/choisIv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:background="@drawable/ic_done_white_24dp"
    android:contentDescription="@string/done"/>

</RelativeLayout>