<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/ic_fingerprint_background">

  <TextView
    android:id="@+id/titleTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="@string/accounts"
    android:textColor="@android:color/white"
    android:textSize="@dimen/text_size_large_26"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>


  <LinearLayout
    android:id="@+id/rootMiddleLl"
    android:layout_width="@dimen/content_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/accounts_root_middlell_margin_top"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="@drawable/rounded_logo_accounts"
      android:contentDescription="@string/accounts_logo"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:gravity="center"
      android:text="@string/looks_like_you_haven_t_connect_any_accounts_to_your_id"
      android:textColor="@android:color/white"
      android:textSize="@dimen/text_size_medium_18"/>


  </LinearLayout>

  <FrameLayout
    android:layout_width="@dimen/content_width"
    android:layout_height="80dp"
    android:layout_marginBottom="@dimen/tooltip_margin_bottom"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/ic_black_tooltip_background"
      android:contentDescription="@string/tooltip"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/tooltip_text_margin_bottom"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="@string/scan_qr_code_to_add_account"
      android:textColor="@android:color/white"
      android:textSize="@dimen/text_size_medium_18"/>
  </FrameLayout>


  <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler"
    android:layout_width="310dp"
    android:layout_height="432dp"
    android:layout_marginTop="76dp"
    android:overScrollMode="never"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/titleTv"/>

</android.support.constraint.ConstraintLayout>