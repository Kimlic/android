<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColorHint">@color/lightBlue</item>
    <item name="android:windowDisablePreview">true</item>
  </style>

  <!--<item name="android:windowBackground">@drawable/ic_simple_background</item>-->

  <!--Themes for textSwitcher Passcode-->
  <style name="TitleStyle">
    <item name="android:textSize">@dimen/title_text_size</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:gravity">center_horizontal</item>
  </style>

  <style name="SubtitleStyle" parent="TitleStyle">
    <item name="android:textSize">@dimen/subtitle_text_size</item>
  </style>

  <!--Date picker theme-->

  <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/darkBlue</item>
  </style>

  <!--Passcode circle button-->

  <style name="PasscodeCircleButtonOk" parent="PasscodeCircleButton">
    <item name="android:background">@drawable/button_shape_circle_ok</item>
  </style>

  <style name="PasscodeCircleButton">
    <item name="android:layout_margin">10dp</item>
    <item name="android:layout_width">72dp</item>
    <item name="android:layout_height">72dp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">@dimen/circle_button_digit</item>
    <item name="android:background">@drawable/button_shape_circle</item>
    <item name="android:elevation">@dimen/button_elevation</item>
  </style>

  <!--Passcode dots -->
  <style name="PasscodeDot">
    <item name="android:layout_width">16dp</item>
    <item name="android:layout_height">16dp</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:background">@drawable/button_dots_shape_oval</item>
    <item name="android:elevation">@dimen/button_elevation</item>
    <item name="android:visibility">visible</item>
    <item name="android:clickable">false</item>

  </style>


  <style name="KimlicTilStyle">
    <item name="android:textColorHint">@android:color/white</item>
    <item name="colorControlNormal">@android:color/white</item>
    <item name="colorControlActivated">@android:color/white</item>
    <item name="colorControlHighlight">@android:color/white</item>

  </style>

  <!--EditText Style -> passphrases-->
  <!--Document contactVerify-->
  <style name="KimlicEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textColorHint">@android:color/white</item>
    <item name="android:textSize">16sp</item>
    <item name="android:backgroundTint">@color/lightBlue</item>
    <item name="android:inputType">text</item>
    <item name="android:lines">1</item>
    <item name="android:paddingStart">5dp</item>
    <item name="android:paddingEnd">15dp</item>
    <item name="android:max">30</item>
    <item name="android:colorAccent">@android:color/white</item>
    <item name="colorControlNormal">@android:color/white</item>
    <item name="colorControlActivated">@android:color/white</item>
    <item name="colorControlHighlight">@android:color/white</item>
  </style>

  <!--TetxInputLayout and EditText unside-->
  <!--NameActivity-->
  <!--Address Activity-->

  <style name="WhiteUnderlineTheme" parent="AppTheme">
    <item name="colorAccent">@android:color/white</item>
  </style>

  <!--NameActivity PhoneActivityu DetailsActivity-->
  <style name="WhiteTextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/grayLight</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="WhiteTextDocInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="AddressTextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/lightBlue</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="DigitHolderStyle">
    <item name="android:layout_width">70dp</item>
    <item name="android:layout_height">80dp</item>
    <item name="android:layout_marginStart">4dp</item>
    <item name="android:layout_marginEnd">4dp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">40sp</item>
    <item name="android:gravity">center</item>
    <item name="android:maxLength">1</item>
    <item name="android:background">@drawable/square_edittext_background_trasparent</item>
    <item name="android:cursorVisible">false</item>
    <item name="android:longClickable">false</item>
    <item name="android:inputType">numberDecimal</item>
    <item name="android:digits">0123456789</item>
  </style>

  <!---->

  <style name="KimlicSettingSwitch">
    <item name="android:colorControlNormal">@android:color/white</item>
    <item name="android:colorControlActivated">@color/lightBlue</item>
    <item name="android:colorControlHighlight">@color/colorAccent</item>
  </style>

  <!--FullScreen DialogFragment stryle-->

  <style name="FullScreenDialog" parent="android:Theme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowIsFloating">false</item>
  </style>

  <style name="DetailsItemShevron">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentEnd">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:background">@drawable/ic_white_menu_arrow</item>
    <item name="android:contentDescription">@string/shevron_right</item>
  </style>

  <!--User stage style-->
  <style name="DetailsItemTextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentStart">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/lightBlue</item>
  </style>


</resources>
